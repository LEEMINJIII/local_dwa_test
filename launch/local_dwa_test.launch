<launch>
  <!-- 1. Fake localization (map 없이 odom만) -->
  <node pkg="fake_localization" type="fake_localization" name="fake_localization" output="screen">
    <param name="odom_frame_id" value="odom"/>
    <param name="base_frame_id" value="base_link"/>
  </node>

  <!-- 2. TF 설정 -->
  <node pkg="tf" type="static_transform_publisher" name="odom_to_base_link"
        args="0 0 0 0 0 0 odom base_link 50"/>
  <node pkg="tf" type="static_transform_publisher" name="base_link_to_laser"
        args="0.1 0 0.1 0 0 0 base_link laser 50"/>

  <!-- 3. move_base 실행 -->
  <node pkg="move_base" type="move_base" name="move_base" output="screen">
    <param name="base_global_planner" value=""/>  <!-- global planner 없이 local만 -->
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS"/>
    <rosparam file="$(find local_dwa_test)/config/local_costmap_params.yaml" command="load"/>
    <rosparam file="$(find local_dwa_test)/config/dwa_local_planner_params.yaml" command="load"/>
    <param name="global_frame_id" value="odom"/>
    <param name="robot_base_frame" value="base_link"/>
  </node>
</launch>
